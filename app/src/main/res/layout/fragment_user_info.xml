<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/default16_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_info_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/user_info_friendship_state_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/friend"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:visibility="gone" />

        <Button
            android:id="@+id/user_info_add_friend_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_friend"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:id="@+id/user_info_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/default16_margin"
        android:scaleType="centerCrop" />

</LinearLayout>
