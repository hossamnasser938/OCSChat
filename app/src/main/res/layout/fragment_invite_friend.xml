<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/invite_friend_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default16_margin"
        android:layout_marginRight="@dimen/default16_margin"
        android:hint="@string/friend_email" />

    <TextView
        android:id="@+id/invite_friend_error_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default16_margin"
        android:textColor="@color/red"
        android:visibility="gone" />

</LinearLayout>
