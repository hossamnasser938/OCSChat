<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/friend_info_name_text_view"
            style="@style/UserExtraInfo"
            android:visibility="visible"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/friend_info_age_text_view"
            style="@style/UserExtraInfo" />

        <TextView
            android:id="@+id/friend_info_education_text_view"
            style="@style/UserExtraInfo" />

        <TextView
            android:id="@+id/friend_info_education_org_text_view"
            style="@style/UserExtraInfo" />

        <TextView
            android:id="@+id/friend_info_major_text_view"
            style="@style/UserExtraInfo" />

        <TextView
            android:id="@+id/friend_info_work_text_view"
            style="@style/UserExtraInfo" />

        <TextView
            android:id="@+id/friend_info_company_text_view"
            style="@style/UserExtraInfo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/friend_info_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default8_margin"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <Button
            android:id="@+id/friend_info_add_friend_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default8_margin"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
